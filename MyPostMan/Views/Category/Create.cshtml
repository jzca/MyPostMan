@model CategoryBindingModel
@{
    ViewBag.Title = "Create";
}

<h3>Create a Category</h3>

<form method="post">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Name, "Name")
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "name" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "description" })
    </div>

    <div class="">
        <button type="submit" class="btn btn-outline-secondary">Submit</button>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}