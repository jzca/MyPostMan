@model  List<CategoryViewModel>
@{
    ViewBag.Title = "Created Categories";
}

<h2>@ViewBag.Title</h2>


@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>There are no categories</strong></p>
    </div>
}
else
{
    <div class="table-responsive">

        <table class="table table-striped table-auto-sort">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Hh Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Created</th>
                    <th>Date Updated</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Id</td>
                        <td>@record.HouseholdId</td>
                        <td>@record.Name</td>
                        <td>@record.Description</td>
                        <td>@record.DateCreated</td>
                        <td>@record.DateUpdated</td>
                        <td>
                            <a href="@Url.Action("Edit", "Category", new { id = record.Id, hhId=record.HouseholdId })">
                                <i class="fas fa-fw fa-wrench"></i>
                            </a>
                        </td>
                        <td>
                            @using (Html.BeginForm("Delete", "Category", new { id = record.Id, hhId = record.HouseholdId }, FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-danger btn-sm btn-circle">
                                    <i class="far fa-trash-alt"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
