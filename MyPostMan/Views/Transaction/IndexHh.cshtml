@model  List<MyHouseholdViewModel>
@{
    ViewBag.Title = "My Households";
}

<h2>@ViewBag.Title</h2>


@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>There are no households</strong></p>
    </div>
}
else
{
    <div class="table-responsive">

        <table class="table table-striped table-auto-sort">
            <thead>
                <tr>
                    <th>Hh Id</th>
                    <th>Name</th>
                    <th>Date Created</th>
                    <th>Date Updated</th>
                    <th>Description</th>
                    <th>Create Transactions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Id</td>
                        <td>
                            <a href="@Url.Action("Detail", "Household", new { id = record.Id })">
                                @record.Name
                            </a>
                        </td>
                        <td>@record.DateCreated</td>
                        <td>@record.DateUpdated</td>
                        <td>@record.Description</td>
                        <td>
                            <a href="@Url.Action("Create", "Transaction", new { id = record.Id })">
                                <i class="fas fa-plus"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
