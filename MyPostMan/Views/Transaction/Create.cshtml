@model TranscationBindingModel
@{
    ViewBag.Title = "Create";
}

<h3>Create a Transcation</h3>

<form method="post">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Title, "Title")
        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "title" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "description" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Amount, "Amount")
        @Html.TextAreaFor(p => p.Amount, new { @class = "form-control", placeholder = "description" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.DateTransacted, "Date Transacted")
        @Html.TextBoxFor(p => p.DateTransacted, new { @class = "form-control", placeholder = "year-month-date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.BankAccounts)
        @Html.DropDownListFor(p => p.BankAccountId, (SelectList)Model.BankAccounts,
                                  "Select a BankAccount",
                                  new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Categories)
        @Html.DropDownListFor(p => p.CategoryId, (SelectList)Model.Categories,
                                  "Select a Category",
                                  new { @class = "form-control" })
    </div>

    <div class="">
        <button type="submit" class="btn btn-outline-secondary">Submit</button>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}