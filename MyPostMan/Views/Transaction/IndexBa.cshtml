@model  List<BankAccountViewModel>
@{
    ViewBag.Title = "My Bank Accounts";
}

<h2>@ViewBag.Title</h2>


@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>There are no bank accounts</strong></p>
    </div>
}
else
{
    <div class="table-responsive">

        <table class="table table-striped table-auto-sort">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Hh Id</th>
                    <th>Balance</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Created</th>
                    <th>Date Updated</th>
                    <th>View All Transactions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Id</td>
                        <td>@record.HouseholdId</td>
                        <th>$ @record.Balance</th>
                        <td>@record.Name</td>
                        <td>@record.Description</td>
                        <td>@record.DateCreated</td>
                        <td>@record.DateUpdated</td>
                        <th>
                            <a href="@Url.Action("ShowMine", "Transaction", new { id = record.Id })">
                                <i class="fas fa-receipt"></i>
                            </a>
                        </th>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
