@model EditTranscationBindingModel
@{
    ViewBag.Title = "Edit";
}

<h3>Edit this Transcation</h3>

<form method="post">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Title, "Title")
        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "title" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextAreaFor(p => p.Description, new { @class = "form-control", placeholder = "description" })
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Amount, "Amount")
        @Html.TextAreaFor(p => p.Amount, new { @class = "form-control", placeholder = "description" })
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="dateTransacted">Date Transacted</label>
        <input class="form-control date-picker" name="DateTransacted" id="dateTransacted" value="@Model.DateTransacted" placeholder="Please type the below data or change it."  required />
    </div>

    <div class="form-group">
        @Html.LabelFor(p => p.Categories)
        @Html.DropDownListFor(p => p.CategoryId, (SelectList)Model.Categories,
                                  "Select a Category",
                                  new { @class = "form-control" })
    </div>

    <div class="">
        <button type="submit" class="btn btn-outline-secondary">Submit</button>
    </div>
</form>

@section Css{
    <link href="~/resources/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/resources/css/jquery-ui-timepicker-addon.css" rel="stylesheet" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/resources/vendor/jquery/jquery-ui.min.js"></script>
    <script src="~/resources/vendor/jquery/jquery-ui-timepicker-addon.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#dateTransacted').datetimepicker(
                {
                    dateFormat: 'yy-mm-dd',
                    timeFormat: 'h:mm:ss TT'
                });
        })
    </script>
}

