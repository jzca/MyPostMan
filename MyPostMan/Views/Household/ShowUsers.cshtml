@model  List<ShowUsersViewModel>
@{
    ViewBag.Title = "Joined Users";
}

<h2>@ViewBag.Title</h2>

@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>There are no joined users.</strong></p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-auto-sort">
            <thead>
                <tr>
                    <th>User Id</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Id</td>
                        <td>@record.Email</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
