@model  BankAccountHouseholdViewModel
@{
    ViewBag.Title = "Detail";
}

<h2>@ViewBag.Title</h2>


@if (Model == null)
{
    <div style="margin-top:15px;">
        <p><strong>There are no details</strong></p>
    </div>
}
else
{

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Household Balance</h6>
        </div>
        <div class="card-body">
            <h2>Name: @Model.Name</h2>
            <h3>Total: $ @Model.TotalBalance</h3>
        </div>
    </div>

    if (Model.BigEaBankAccDetail.Any())
    {
        foreach (var ba in Model.BigEaBankAccDetail)
        {
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Bank Account: @ba.BankAccName</h6>
                </div>
                <div class="card-body">
                    <h3>Total: $ @ba.Amount</h3>

                    @if (ba.TransAmtByCats.Any())
                    {
                        <div class="table-responsive table-bordered" style="margin-top:10px; padding:10px;">

                            <table class="table table-striped table-auto-sort">
                                <thead>
                                    <tr>
                                        <th>Category Name</th>
                                        <th>Transcation Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var trans in ba.TransAmtByCats)
                                    {
                                        <tr>
                                            <td> @trans.CategoryName</td>
                                            <th>$ @trans.Amount</th>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        }

    }
}
