@model  List<HouseholdViewModel>
@{
    ViewBag.Title = "My invitation Households";
}

<h2>@ViewBag.Title</h2>

@if (!Model.Any())
{
    <div style="margin-top:15px;">
        <p><strong>There are no invitation households</strong></p>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-auto-sort">
            <thead>
                <tr>
                    <th>Hh Id</th>
                    <th>Name</th>
                    <th>Date Created</th>
                    <th>Date Updated</th>
                    <th>Description</th>
                    <th>Join</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td>@record.Id</td>
                        <td>@record.Name</td>
                        <td>@record.DateCreated</td>
                        <td>@record.DateUpdated</td>
                        <td>@record.Description</td>
                        <td>

                            @using (Html.BeginForm("Join", "Household", new { id = record.Id }, FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-info btn-sm btn-circle">
                                    <i class="fas fa-sign-in-alt"></i>
                                </button>
                            }
                            @*<a href="@Url.Action("Join", "Household", new { id = record.Id })">
                                    <i class="fas fa-user-edit"></i>
                                </a>*@
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
