@model InviteUserBindingModel
@{
    ViewBag.Title = "Invite";
}

<h3>Invite a user</h3>

<form method="post">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Email)
        @Html.TextBoxFor(p => p.Email, new { @class = "form-control", placeholder = "User email" })
    </div>

    <div class="">
        <button type="submit" class="btn btn-outline-secondary">Submit</button>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
