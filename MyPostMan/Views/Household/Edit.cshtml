@model HouseholdBindingModel
@{
    ViewBag.Title = "Edit";
}

<h3>Edit this Household</h3>

<form method="post">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Name, "Name")
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Hh name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description")
        @Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })
    </div>
    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>

</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}